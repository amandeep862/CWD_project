<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Login</title>
    
</head>

<body class="text-center">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home"><img src="media/logo.png" style="width:5em;" alt="CWH"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                </div>
            </div>
        </nav>
    </div> 
    <div class=" d-flex flex-md-row justify-content-center " style="margin-top: 12em;">
      <div class="p-2 "></div>
      <div class="p-4 flex-xs-grow-1" >
    <form action="/login_request" enctype="application/x-www-form-urlencoded" method="post">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
{{#if resObj.msg}}
      <div class="alert alert-danger" role="alert"> {{resObj.msg}}</div>
{{/if}}
      <div class="form-floating">
        <input type="text" class="form-control" id="floatingInput" name="userUsername" placeholder="name@example.com" value="{{resObj.username}}">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" name="userPassword" placeholder="Password" value="{{resObj.password}}">
        <label for="floatingPassword">Password</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit" style="margin-top: 2rem;">Sign in</button>
      
    </form>
</div>
<div class="p-2"></div>
</div>

  
      
    
  
  <script src="moz-extension://b323c55c-777c-48de-bad8-d18f49ddd0bb/js/app.js" type="text/javascript"></script></body>

</html>