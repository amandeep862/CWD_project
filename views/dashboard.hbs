<section style="background-color: #eee;">
  <div class="container py-5">
      
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            {{#if resObj.isAdmin}}
                            <img src="https://e7.pngegg.com/pngimages/59/659/png-clipart-computer-icons-scalable-graphics-avatar-emoticon-animal-fox-jungle-safari-zoo-icon-animals-orange-thumbnail.png"
                                alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            {{/if}}
                            {{#unless resObj.isAdmin}}
                            <img src="https://cdn3.iconfinder.com/data/icons/avatars-9/145/Avatar_Penguin-512.png" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            {{/unless}}
                            <h5 class="my-3">{{resObj.userFname}} {{resObj.userLname}}</h5>
                            {{#if resObj.isAdmin}}
                            <p class="text-muted mb-1">Admin</p>
                            <p class="text-muted mb-4">Full control granted</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Full Name</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{resObj.userFname}} {{resObj.userLname}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{resObj.userEmail}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{resObj.userPhone}}</p>
                                </div>
                            </div>                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
